<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="TOP_LEFT" minHeight="100" maxHeight = "200" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="10" />
      </padding>
        <HBox spacing="5" alignment="TOP_LEFT">
            <Label fx:id="header" text="\$first" styleClass="cell_header"/>
        </HBox>
      <HBox spacing="5" alignment="TOP_LEFT">
        <Label fx:id="name" text="\$first" styleClass="cell_name_label"/>
      </HBox>
      <Label fx:id="phone" styleClass="cell_big_label" text="\$phone" />
      <Label fx:id="address" styleClass="cell_big_label" text="\$address" />
      <Label fx:id="email" styleClass="cell_big_label" text="\$email"/>
        <FlowPane fx:id="tags" alignment="TOP_LEFT"/>
    </VBox>
  </GridPane>
</HBox>
